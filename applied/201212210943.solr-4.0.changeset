+
+export LANG=en_US.UTF-8
+export PYTHONPATH=.:$PYTHONPATH
+tests="client server"
+option=$1
+if [ "$option" == "--client" ]; then 
+    tests="client"
+    shift
+elif [ "$option" == "--server" ]; then 
+    tests="server"
+    shift
+fi
+
+for type in $tests; do
+    echo "Meresco Solr $(echo $type | sed -e "s,\(.\)\(.*\),\U\1\L\2,") tests."
+    (
+        cd ../$type/test
+        ./alltests.sh "$@"
+    )
+done
