+        jetty_xml = parse(open(join(solrDataDir, 'etc', 'jetty.xml')))
+        self.assertEquals(['8042'], jetty_xml.xpath('//SystemProperty[@name="jetty.port"]/@default'))
+
+        f = open(join(solrDataDir, 'start.config'))
