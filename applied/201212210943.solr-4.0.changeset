+            schema_xml = parse(open(schema_xml_path))
+            schema_xml.xpath("/schema")[0].attrib['name'] = unicode("meresco-%s" % core)
+            open(schema_xml_path, 'w').write(tostring(schema_xml, pretty_print=True, encoding="UTF-8"))
