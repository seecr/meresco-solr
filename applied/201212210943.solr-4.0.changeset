+
+        self.assertEquals(set(['core1', 'cr2']), set(listdir(join(solrDataDir, 'cores'))))
+        solr_xml = parse(open(join(solrDataDir, 'solr.xml')))
+        self.assertEquals(set(['core1', u'cr2']), set(solr_xml.xpath("//core/@name")))
+        self.assertEquals(set(['cores/core1', u'cores/cr2']), set(solr_xml.xpath("//core/@instanceDir")))
+
+        schema_core1_xml = parse(open(join(solrDataDir, 'cores', 'core1', 'conf', 'schema.xml')))
+        self.assertEquals(['meresco-core1'], schema_core1_xml.xpath("/schema/@name"))
+
+        schema_core2_xml = parse(open(join(solrDataDir, 'cores', 'cr2', 'conf', 'schema.xml')))
+        self.assertEquals(['meresco-cr2'], schema_core2_xml.xpath("/schema/@name"))
+
+    def testSetupSolrConfigWithAutocomplete(self):
+        solrDataDir = join(self.tempdir, 'solr-data')
